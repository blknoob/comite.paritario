<h2 class="titulo-principal">Panel de Administraci칩n</h2>

<a href="/uploads/cphs.st02.xlsx" download>
  游늯 Descargar Plan de Trabajo CPHS
</a>

<div class="tabla-responsive">
  <table border="1" cellpadding="8" cellspacing="0">
    <thead>
      <tr>
        <th>N춿</th>
        <th>Nombre</th>
        <th>Tipo</th>
        <th>Mensaje</th>
        <th>Imagen</th>
        <th>Fecha</th>
        <th>Estado</th>
        <th>Comentario Soluci칩n</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each lista.docs}}
        <tr>
          <td>{{this.numero}}</td>
          <td>{{this.nombre}}</td>
          <td>{{this.tipo}}</td>
          <td>{{this.mensaje}}</td>
          <td>
  {{#if this.imagenes.length}}
    <a href="/admin/imagenes/{{this._id}}">Ver im치genes ({{this.imagenes.length}})</a>
  {{else}}
    Sin im치genes
  {{/if}}
</td>

          <td>{{this.createdAt}}</td>

          <!-- Celda Estado -->
          <td>
            <form action="/admin/actualizar/{{this._id}}" method="POST" class="form-actualizar">
              <select name="estado" required>
                <option value="Pendiente" {{#ifEquals this.estado "Pendiente"}}selected{{/ifEquals}}>Pendiente</option>
                <option value="En Proceso" {{#ifEquals this.estado "En Proceso"}}selected{{/ifEquals}}>En Proceso</option>
                <option value="Resuelto" {{#ifEquals this.estado "Resuelto"}}selected{{/ifEquals}}>Resuelto</option>
              </select>
          </td>

          <!-- Celda Comentario -->
          <td>
  <textarea name="comentarioSolucion"
            placeholder="Comentario de soluci칩n"
            class="comentario-box">{{this.comentarioSolucion}}</textarea>
</td>


          <!-- Celda Acciones -->
          <td>
              <button class="act" type="submit">Actualizar</button>
            </form>
          <form action="/admin/eliminar/{{this._id}}" method="POST" class="form-eliminar" data-nombre="{{this.nombre}}" style="margin-top: 5px;">
    <button type="submit">Eliminar</button>
  </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<br />

<div style="text-align: center;">
  {{#if lista.hasPrevPage}}
    <a href="/admin?page={{lista.prevPage}}">拘勇 Anterior</a>
  {{/if}}

  P치gina {{lista.page}} de {{lista.totalPages}}

  {{#if lista.hasNextPage}}
    <a href="/admin?page={{lista.nextPage}}">Siguiente 俱뫮잺</a>
  {{/if}}
</div>

<script>
  // Confirmaci칩n al eliminar
  document.querySelectorAll('.form-eliminar').forEach(form => {
    const nombre = form.dataset.nombre;

    form.addEventListener('submit', function (e) { 
      e.preventDefault();

      Swal.fire({
        title: `쮼liminar reclamo/sugerencia realizado por "${nombre}"?`,
        text: 'Esta acci칩n lo eliminar치 permanentemente.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#e74c3c',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'S칤, eliminar',
        cancelButtonText: 'Cancelar'
      }).then((result) => {
        if (result.isConfirmed) {
          form.submit();
        }
      });
    });
  });

  // Alerta de 칠xito al actualizar
  document.querySelectorAll('.form-actualizar').forEach(form => {
    form.addEventListener('submit', function (e) {
      e.preventDefault();

      Swal.fire({
        title: 'Actualizado',
        text: 'El comentario ha sido actualizado correctamente.',
        icon: 'success',
        timer: 3000,
        showConfirmButton: false,
        timerProgressBar: true
      }).then(() => {
        form.submit();
      });
    });
  });
</script>

