<div class="container imagenes-bloque">
  <p><strong>Tipo:</strong> {{feedback.tipo}}</p>
  <p><strong>Mensaje:</strong> {{feedback.mensaje}}</p>

  {{#if feedback.imagenes.length}}
    <div class="imagenes-grid">
      {{#each feedback.imagenes}}
        <a href="{{this}}" target="_blank">
          <img src="{{this}}" alt="imagen">
        </a>
      {{/each}}
    </div>
  {{else}}
    <p style="text-align: center; color: gray;">No hay imágenes disponibles.</p>
  {{/if}}

  <div style="text-align: center;">
    <a href="/{{origen}}" class="volver-btn">
      ⬅️ Volver a {{#ifEquals origen "admin"}}Admin{{else}}Seguimiento{{/ifEquals}}
    </a>
  </div>
</div>

